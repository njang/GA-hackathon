<% include partials/header %>

	<header>
		<div class='row'>
			<div class='col col-2 px-3'>
				<a href='/'>
					<img src='images/diversityGov.png' alt='Diversity.gov logo' width=100px height=100px>
				</a>
			</div>
			<div class='col col-2 offset-8'>
				<form id='searchResult'>
					<div>
						<input type='text' class='btn search-main text-left fa' placeholder='&#xf002; search'>
					</div>
				</form>
			</div>
		</div>
	</header>

	<section class='row p-2'>
		<aside class='col col-2'>
			<h3>Departments</h3>
			<form>
	    	<ul class='list-group list-group-flush'>
	        <li class='list-group-item'>
            <input type='radio' id='deptChoice1' name='department' value='animalServices'>
  					<label for='deptChoice1'>Animal Services</label>
	        </li>
	        <li class='list-group-item'>
            <input type='radio' id='deptChoice2' name='department' value='buildingServices'>
  					<label for='deptChoice2'>Building Services</label>
	        </li>
	        <li class='list-group-item'>
            <input type='radio' id='deptChoice3' name='department' value='cityClert'>
  					<label for='deptChoice3'>City Clerk</label>
	        </li>
	        <li class='list-group-item'>
            <input type='radio' id='deptChoice4' name='department' value='commTech'>
  					<label for='deptChoice4'>Comms & Tech</label>
	        </li>
	        <li class='list-group-item'>
            <input type='radio' id='deptChoice5' name='department' value='convCenter'>
  					<label for='deptChoice5'>Convention Center</label>
	        </li>
	        <li class='list-group-item'>
            <input type='radio' id='deptChoice6' name='department' value='devServices'>
  					<label for='deptChoice6'>Development Services</label>
	        </li>
	        <li class='list-group-item'>
            <input type='radio' id='deptChoice7' name='department' value='emergencyMed'>
  					<label for='deptChoice7'>Emergency Medical</label>
	        </li>
	    	</ul>
			</form>
			<h3>Roles</h3>
			<form>
				<ul class='list-group list-group-flush'>
	        <li class='list-group-item'>
	          <input type='radio' id='roleChoice1' name='roles' value='in Customer Service'>
  					<label for='roleChoice1'>Customer Service</label>
	        </li>
	        <li class='list-group-item'>
	          <input type='radio' id='roleChoice2' name='roles' value='in Engineer'>
  					<label for='roleChoice2'>Engineer</label>
	        </li>
	        <li class='list-group-item'>
	          <input type='radio' id='roleChoice3' name='roles' value='in Project Manager'>
  					<label for='roleChoice3'>Project Manager</label>
	        </li>
	        <li class='list-group-item'>
	          <input type='radio' id='roleChoice4' name='roles' value='in Human Resources'>
  					<label for='roleChoice4'>Human Resources</label>
	        </li>
	        <li class='list-group-item'>
	          <input type='radio' id='roleChoice5' name='roles' value='in Trainer'>
  					<label for='roleChoice5'>Trainer</label>
	        </li>
	    	</ul>
	    	<button class='btn btn-primary text-right' type='submit' onclick='/results'>Apply</button>
			</form>
		</aside>
